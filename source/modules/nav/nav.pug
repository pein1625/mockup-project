mixin nav(menu)
  nav.navigation
    .navigation__wrapper.js-navigation-wrap
      .container
        .navigation__inner
          a.logo(href="/")
            img.logo__img(src="images/logo.png", alt="")
          ul.menu.js-menu-dropdown
            each item in menu
              if (item.name === "UNIVERSITY")
                li.menu__item.menu-dropdown
                  a.menu__link.menu__link--caret.js-menu-dropdown-toggle(href=item.url)= item.name
                  .submenu
                    a.submenu__item(href="#!") Basic Training
                    a.submenu__item(href="#!") Advanced Training
                    a.submenu__item(href="#!") Master mind
              else
                li.menu__item
                  a.menu__link(href=item.url)= item.name
          ul.user
            li.user__item
              a.user__btn.js-search-btn(href="#!")
                img.user__icon(src="images/icon-search.png", alt="")
            li.user__item
              a.user__btn.js-register-btn(href="#!")
                img.user__icon(src="images/icon-user.png", alt="")
            li.user__item
              a.user__btn(href="#!")
                img.user__icon(src="images/icon-unlock.png", alt="")
          .menu-btn.js-menu-btn
            .menu-btn__wrap
              span.menu-btn__bar
              span.menu-btn__bar
              span.menu-btn__bar
